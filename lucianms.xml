  <property name="project.jdk.home" value="${jdk.home.11.0.5}"/>
  <property name="project.jdk.bin" value="${jdk.bin.11.0.5}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.11.0.5"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.maven:_at.favre.lib:bcrypt:0.8.0.classpath">
    <pathelement location="${path.variable.maven_repository}/at/favre/lib/bcrypt/0.8.0/bcrypt-0.8.0.jar"/>
  </path>
  
  <path id="library.maven:_at.favre.lib:bytes:1.1.0.classpath">
    <pathelement location="${path.variable.maven_repository}/at/favre/lib/bytes/1.1.0/bytes-1.1.0.jar"/>
  </path>
  
  <path id="library.maven:_com.google.protobuf:protobuf-java:3.6.1.classpath">
    <pathelement location="${path.variable.maven_repository}/com/google/protobuf/protobuf-java/3.6.1/protobuf-java-3.6.1.jar"/>
  </path>
  
  <path id="library.maven:_com.zaxxer:hikaricp:3.2.0.classpath">
    <pathelement location="${path.variable.maven_repository}/com/zaxxer/HikariCP/3.2.0/HikariCP-3.2.0.jar"/>
  </path>
  
  <path id="library.maven:_commons-io:commons-io:2.6.classpath">
    <pathelement location="${path.variable.maven_repository}/commons-io/commons-io/2.6/commons-io-2.6.jar"/>
  </path>
  
  <path id="library.maven:_io.netty:netty-all:4.1.30.final.classpath">
    <pathelement location="${path.variable.maven_repository}/io/netty/netty-all/4.1.30.Final/netty-all-4.1.30.Final.jar"/>
  </path>
  
  <path id="library.maven:_mysql:mysql-connector-java:8.0.14.classpath">
    <pathelement location="${path.variable.maven_repository}/mysql/mysql-connector-java/8.0.14/mysql-connector-java-8.0.14.jar"/>
  </path>
  
  <path id="library.maven:_org.apache.logging.log4j:log4j-api:2.11.2.classpath">
    <pathelement location="${path.variable.maven_repository}/org/apache/logging/log4j/log4j-api/2.11.2/log4j-api-2.11.2.jar"/>
  </path>
  
  <path id="library.maven:_org.apache.logging.log4j:log4j-core:2.11.2.classpath">
    <pathelement location="${path.variable.maven_repository}/org/apache/logging/log4j/log4j-core/2.11.2/log4j-core-2.11.2.jar"/>
  </path>
  
  <path id="library.maven:_org.apache.logging.log4j:log4j-slf4j-impl:2.11.2.classpath">
    <pathelement location="${path.variable.maven_repository}/org/apache/logging/log4j/log4j-slf4j-impl/2.11.2/log4j-slf4j-impl-2.11.2.jar"/>
  </path>
  
  <path id="library.maven:_org.slf4j:slf4j-api:1.7.25.classpath">
    <pathelement location="${path.variable.maven_repository}/org/slf4j/slf4j-api/1.7.25/slf4j-api-1.7.25.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/classes/lucian-core-mod/module_lucian-core.xml"/>
  
  <import file="${basedir}/module_lucianms.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.lucian-core, clean.module.lucianms" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.lucian-core, compile.module.lucianms" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.lucian-channel" value="${basedir}/classes/artifacts/lucian_channel"/>
    <property name="artifact.output.lucian-core" value="${basedir}/classes/artifacts/lucian_core"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.lucian-channel.jar" value="${artifacts.temp.dir}/lucian-channel.jar"/>
    <property name="temp.jar.path.lucian-core.jar" value="${artifacts.temp.dir}/lucian-core.jar"/>
  </target>
  
  <target name="artifact.lucian-channel" depends="init.artifacts" description="Build &#39;lucian-channel&#39; artifact">
    <property name="artifact.temp.output.lucian-channel" value="${artifacts.temp.dir}/lucian_channel"/>
    <mkdir dir="${artifact.temp.output.lucian-channel}"/>
    <jar destfile="${temp.jar.path.lucian-channel.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset file="${basedir}/lucian-channel/src/META-INF/MANIFEST.MF" prefix="META-INF"/>
      <zipfileset file="${path.variable.maven_repository}/at/favre/lib/bcrypt/0.8.0/bcrypt-0.8.0.jar"/>
      <zipfileset dir="${basedir}/lucian-channel/src/com"/>
      <zipfileset dir="${basedir}/lucian-channel/src/out"/>
    </jar>
    <copy file="${temp.jar.path.lucian-channel.jar}" tofile="${artifact.temp.output.lucian-channel}/lucian-channel.jar"/>
  </target>
  
  <target name="artifact.lucian-core" depends="init.artifacts" description="Build &#39;lucian-core&#39; artifact">
    <property name="artifact.temp.output.lucian-core" value="${artifacts.temp.dir}/lucian_core"/>
    <mkdir dir="${artifact.temp.output.lucian-core}"/>
    <jar destfile="${temp.jar.path.lucian-core.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${basedir}/target/classes"/>
    </jar>
    <copy file="${temp.jar.path.lucian-core.jar}" tofile="${artifact.temp.output.lucian-core}/lucian-core.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.lucian-channel, artifact.lucian-core" description="Build all artifacts">
    <mkdir dir="${artifact.output.lucian-channel}"/>
    <copy todir="${artifact.output.lucian-channel}">
      <fileset dir="${artifact.temp.output.lucian-channel}"/>
    </copy>
    <mkdir dir="${artifact.output.lucian-core}"/>
    <copy todir="${artifact.output.lucian-core}">
      <fileset dir="${artifact.temp.output.lucian-core}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>